<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VocaTongue"
             x:Class="VocaTongue.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="VocaWhite">#F0F3EE</Color>
            <Color x:Key="VocaPink">#F19996</Color>
            <Color x:Key="VocaOrange">#F28D6A</Color>
            <Color x:Key="VocaRed">#E77961</Color>
            <Color x:Key="VocaGray">#5A5856</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
